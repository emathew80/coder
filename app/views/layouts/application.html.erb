        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
    
      <%= link_to root_path do %>
        <span class="navbar-brand"><span>#</span><span class= "white">{</span><span>coder_project</span><span class= "white">}</span></span>
      <% end %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->

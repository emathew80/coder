            <li><a href="#">Something else here</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Separated link</a></li>
          </ul> -->
        </li>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>
 <!-- Nav bar end -->


<!-- Alert and notice messages -->
<div class= "clear">
<% if notice.present? %>
  <p class= "alert alert-info"><%= notice %></p>
<% end %>
<% if alert.present? %>
  <p class= "alert alert-info"><%= alert %></p>
<% end %>
</div>
<!-- lert and notice messages end-->



<%= yield %>
</div>
<!-- footer start-->
  <br class="clr" />
  <div id="footer">
    <div class="container">
      <b>Teachers</b>
      <br />
      <%= link_to 'Teach a Course', new_instructor_course_path %>

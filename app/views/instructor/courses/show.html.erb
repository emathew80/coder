<br />
<div class="booyah-box col-xs-10 col-xs-offset-1">
  <h1 class="text-center"><%= @course.title %></h1><br/>
  <p class="text-center"><%= number_to_currency @course.cost %></p>
  <p class="text-center"><%= @course.description %></p>

  <div class="text-center">
    <%= link_to 'Add a new section...', new_instructor_course_section_path(@course), class: 'btn btn-success' %>
  </div>
  <br />
  <div class="text-center">
    <%= link_to 'Preview As Student...', course_path(@course), class: 'btn btn-warning' %>
  </div>
  <br class="clr" />

  <ul>
    <% @course.sections.each do |section| %> &nbsp
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson', new_instructor_section_lesson_path(section), class: 'pull-right btn btn-success btn-xs' %>
        <ul>
          <% section.lessons.each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="clr" />
      </li>
    <% end %>
  </ul>


</div>
